              </div>
           </div>

           <div className="flex items-center gap-4">
               <div className="relative hidden md:block">
                   <Search className="w-4 h-4 absolute left-3 top-1/2 -translate-y-1/2 text-slate-500" />
                   <input type="text" placeholder="Search data, farms, IDs..." className="w-64 bg-slate-800/50 border border-slate-700 rounded-full pl-9 pr-4 py-1.5 text-sm text-slate-200 focus:outline-none focus:border-emerald-500/50 transition-colors" />
               </div>
               <button className="relative p-2 text-slate-400 hover:text-emerald-400 transition-colors">
                   <Bell className="w-5 h-5" />
                   <span className="absolute top-1 right-1 w-2 h-2 bg-rose-500 rounded-full border-2 border-slate-900" />
               </button>
               <div className="w-8 h-8 rounded-full bg-gradient-to-tr from-emerald-500 to-sky-500 border border-white/10" />
           </div>
        </header>

        {/* Scrollable View Area */}
        <div className="flex-1 overflow-y-auto p-4 md:p-8 scroll-smooth">
           <div className="max-w-7xl mx-auto">
             <motion.div
               key={activeView}
               initial={{ opacity: 0, y: 10 }}
               animate={{ opacity: 1, y: 0 }}
               transition={{ duration: 0.3 }}
             >
                {renderContent()}
             </motion.div>
           </div>
        </div>

        {/* J-Agro Bot Bubble */}
        <AnimatePresence>
            {chatOpen && (
                <motion.div 
                    initial={{ opacity: 0, scale: 0.9, y: 20 }}
                    animate={{ opacity: 1, scale: 1, y: 0 }}
                    exit={{ opacity: 0, scale: 0.9, y: 20 }}
                    className="absolute bottom-20 right-6 w-96 h-[450px] bg-slate-900 border border-slate-700 rounded-2xl shadow-2xl flex flex-col overflow-hidden z-50 glass-panel"
                >
                    <div className="p-4 border-b border-slate-800 flex justify-between items-center bg-emerald-900/10">
                        <div className="flex items-center gap-2">
                            <BrainCircuit className="w-5 h-5 text-emerald-400" />
                            <h3 className="font-semibold text-white">J-Agro AI</h3>
                        </div>
                        <button onClick={() => setChatOpen(false)} className="text-slate-400 hover:text-white"><X className="w-4 h-4"/></button>
                    </div>
                    
                    <div className="flex-1 p-4 overflow-y-auto space-y-4">
                        {localMessages.map(msg => (
                            <div key={msg.id} className={cn("flex", msg.sender === 'user' ? "justify-end" : "justify-start")}>
                                <div className={cn("max-w-[80%] p-3 rounded-2xl text-sm", 
                                    msg.sender === 'user' ? "bg-emerald-600 text-white rounded-tr-none" : "bg-slate-800 text-slate-200 rounded-tl-none border border-slate-700")}>
                                    {msg.text}
                                </div>
                            </div>
                        ))}
                    </div>

                    <div className="p-3 bg-slate-900/50 border-t border-slate-800">
                        <div className="flex gap-2">
                            <input 
                                value={chatInput}
                                onChange={(e) => setChatInput(e.target.value)}
                                onKeyDown={(e) => e.key === 'Enter' && handleSendMessage()}
                                placeholder="Ask about crops, pests..." 
                                className="flex-1 bg-slate-800 border-none rounded-xl px-4 py-2 text-sm text-white focus:ring-1 focus:ring-emerald-500 outline-none" 
                            />
                            <button onClick={handleSendMessage} className="p-2 bg-emerald-600 rounded-xl hover:bg-emerald-500 text-white"><Send className="w-4 h-4"/></button>
                        </div>
                    </div>
                </motion.div>
            )}
        </AnimatePresence>
        
        <button 
            onClick={() => setChatOpen(!chatOpen)}
            className="absolute bottom-6 right-6 p-4 bg-emerald-600 hover:bg-emerald-500 text-white rounded-full shadow-[0_0_20px_rgba(16,185,129,0.4)] z-40 transition-transform hover:scale-105"
        >
            <MessageSquare className="w-6 h-6" />
        </button>

      </main>
    </div>
  );
}
